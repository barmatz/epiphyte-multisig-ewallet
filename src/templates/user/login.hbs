<div class="form panel panel-default">
    <div class="panel-heading">
        <h3>My Wallet</h3>
    </div>
    <div class="panel-body">
        {{#if loading}}
            <div class="loading"></div>
        {{else}}
            {{#if error}}
                <div class="alert alert-warning"><i class="glyphicon glyphicon-warning-sign"></i>{{error}}</div>
            {{/if}}

            <form role="form" onsubmit="return false;" {{action "submit" on="submit"}}>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">@</span>
                        {{input class="form-control" placeholder="id.." value=id}}
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">**</span>
                        {{input class="form-control" placeholder="password.." type="password" value=password}}
                    </div>
                </div>
                <div class="actions">
                    <button class="btn btn-primary pull-right" type="submit">Open wallet</button>
                    
                    {{#link-to "user.forgot"}}<i class="glyphicon glyphicon-question-sign"></i> Forgot password{{/link-to}}
                    {{#link-to "user.create"}}<i class="glyphicon glyphicon-user"></i> Create user{{/link-to}}
                </div>
            </form>
        {{/if}}
    </div>
</div>